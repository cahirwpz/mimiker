# some generic settings
set output-radix 0x10
set pagination off
set confirm off
set verbose off
handle SIGINT stop

# make extra commands available
python import os, sys
python sys.path.append(os.path.join(os.getcwd(), 'sys'))
python import debug

define post-mortem
  info registers
  # cpu tlb # XXX it sometimes hangs
  backtrace full
  kthread *
  kproc
  klog
end

# launch kernel tests and wait for ktest_main to finish
break panic_fail
commands
post-mortem
kill
quit 1
end

break ktest_success
commands
kill
quit 0
end

continue
